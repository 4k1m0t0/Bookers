<h3>Editing Book</h3>
<%= form_for(@book) do |f| %>
<% if @book.errors.any? %>
	<ul>
		<% @book.errors.full_messages.each do |message| %>
		    <li><%= message %></li>
		<% end %>
	</ul>
<% end %>
<p>
	<strong>Title: </strong><br>
	<%= f.text_field :title %>
</p>
<p>
	<strong>Body: </strong><br>
	<%= f.text_area :body %>
</p>
<p>
	<%= f.submit "Update Book" %>
</p>
<% end %>
<p>
<%= link_to 'Show', book_path(@book.id) %>
<%= link_to 'Back', books_path %>
</p>
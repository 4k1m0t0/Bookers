<p class="notice"><%= flash[:notice] %></p>
<h3>Books</h3>
<table>
<tr>
	<th>Title</th>
	<th>Body</th>
	<th></th>
</tr>
<% @books.each do |book| %>
<tr>
	<td id='tdtitle'><%= book.title %></td>
	<td id='tdbody'><%= book.body %></td>
	<td id='tdmove'>
		<%= link_to 'show', book_path(book.id) %>
		<%= link_to 'edit', edit_book_path(book.id) %>
		<%= link_to 'destroy', book_path(book.id), method: :delete, data: {confirm: 'Are you sure?'} %>
	</td>
</tr>
<% end %>
</table>

<!-- %= flash[:alert] %-->

<%= form_for(@book) do |f| %>
	<% if @book.errors.any? %>
		<div id="error_explanation" class='alert alert-danger'>
		<h2><%= pluralize(@book.errors.count, "error") %></h2>
		<ul>
			<% @book.errors.full_messages.each do |message| %>
			    <li><%= message %></li>
			<% end %>
		</ul>
		</div>
	<% end %>
	<h3>New Book</h3>
	<p>title</p>
	<%= f.text_field :title %>
	<p>Body</p>
	<%= f.text_area :body %>
	<p><%= f.submit "Create Book" %></p>
<% end %>
